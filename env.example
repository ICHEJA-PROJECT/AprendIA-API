# Configuración de la base de datos
DB_USERNAME=postgres
DB_PASSWORD=1234567
DB_NAME=authdb
DB_PORT_EXT=5432

# Configuración de la aplicación
APP_PORT=8080
SERVER_CONTEXT_PATH=/api

# Configuración de Swagger (opcional, se genera automáticamente desde APP_PORT)
# SWAGGER__SERVER__URL=http://localhost:${APP_PORT}
# Si no se define, se usará automáticamente: http://localhost:${APP_PORT}

# Configuración JWT
JWT_SECRET=aprendia-secret-key-for-jwt-token-generation-2024
JWT_EXPIRATION=86400000  # 24 horas en milisegundos (24 * 60 * 60 * 1000)

# Configuración de encriptación
ENCRYPTION_SECRET=aprendia-encryption-key-2024

# Configuración de logging
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_SECURITY=DEBUG
LOGGING_LEVEL_SQL=DEBUG

# Configuración del servicio Cloudinary
CLOUDINARY_SERVICE_PORT=8082
APP_CLOUDINARY_SERVICE__URL=http://claudinary-image-service:8080/api/cloudinary
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret
